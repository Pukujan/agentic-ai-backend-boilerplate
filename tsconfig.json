{
  "compilerOptions": {
    /* Environment */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Module system */
    "module": "CommonJS",
    "moduleResolution": "node",

    /* Project structure */
    "rootDir": "src",
    "outDir": "dist",

    /* Interop & imports */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Type safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Output */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Performance / sanity */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
